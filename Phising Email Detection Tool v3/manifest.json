{
  "manifest_version": 3,
  "name": "AI Spam/Ham Email Classifier",
  "version": "2.1",
  "description": "Classifies emails as Spam or Ham using a local Python AI model.",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["alert.css"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/*"
  ]
}